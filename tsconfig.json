{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@calendar/*": [
        "src/apps/calendar/*"
      ],
      "@planner/*": [
        "src/apps/planner/*"
      ]
    }
  }
}
